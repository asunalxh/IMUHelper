<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="202px"

    android:background="@color/white"
    android:layout_marginBottom="94px">



        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="71px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/coursename"/>

        <EditText
            android:layout_marginLeft="68px"
            android:id="@+id/addCourse_name_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/addCourseStyle"
            android:hint="课程名字" />

</LinearLayout>