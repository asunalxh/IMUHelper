<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="377px"
    android:layout_marginBottom="25px"
    android:id="@+id/termCard_base_layout">



        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="166px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_marginTop="66px"
                    android:layout_marginLeft="71px"
                    android:src="@drawable/coursedate"/>

                <TextView
                    android:id="@+id/termCard_name_Tv"
                    android:layout_marginTop="106px"
                    android:layout_marginLeft="54px"
                    android:textSize="45px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/termCard_delete_Btn"/>

            </LinearLayout>


            

        <Button
            android:id="@+id/termCard_delete_Btn"
            android:layout_marginRight="71px"
            android:layout_marginTop="71px"
            android:background="@drawable/delete"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"/>
            
            

            
        </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/addTerm_time"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_marginLeft="150px"
            android:layout_marginTop="45px">



            <TextView
                android:id="@+id/termCard_year_Tv"
                android:layout_width="180px"
                style="@style/addTermStyle"
                android:background="@drawable/editstyle"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/addTermStyle"
                android:text="年"/>
            <TextView
                android:id="@+id/termCard_month_Tv"
                android:layout_width="120px"
                android:background="@drawable/editstyle"
                android:layout_height="match_parent"
                style="@style/addTermStyle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/addTermStyle"
                android:text="月"/>
            <TextView
                android:id="@+id/termCard_day_Tv"
                android:layout_width="120px"
                android:background="@drawable/editstyle"
                android:layout_height="match_parent"
                style="@style/addTermStyle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/addTermStyle"
                android:text="日"/>



        </LinearLayout>

        <ImageView
            android:id="@+id/termCard_Iv"
            android:layout_marginTop="45px"
            android:layout_marginRight="45px"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/notselected"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>





</LinearLayout>